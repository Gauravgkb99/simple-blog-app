<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('./partials/head.ejs') %>
</head>
<body>
    <%- include('./partials/nav.ejs') %>

    <div class="container mt-3">
        <form action="/blog" method="post" enctype="multipart/form-data">
            <div class="mb-3">
              <label for="coverImage">Cover Image</label>
              <input type="file" name="coverImage" class="form-control" id="coverImage" aria-describedby="title" />
            </div>
            <div class="mb-3">
              <label for="title">Title</label>
              <input type="text" required name="title" class="form-control" id="title" aria-describedby="title" placeholder="Enter your title" />
            </div>
            <div class="mb-3">
              <label for="body">Body</label>
              <textarea name="body" required class="form-control" id="body" aria-describedby="body" placeholder="Write your blog"></textarea>
            </div>
            <div class="mb-3">
                <button class="btn btn-primary">Submit</button>
            </div>
        </form>
    </div>
    <%- include('./partials/scripts.ejs') %>
</body>
</html>